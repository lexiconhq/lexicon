  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "<rootDir>/src/__mocks__/setup.js"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/src/__mocks__/svgMock.js"
    }
  },
  "eslintConfig": {
    "extends": "kodefox/react-native",
    "plugins": [
      "t",
      "styles"
    ],
    "rules": {
      "t/string-literal": 1,
      "styles/style-maker-no-unused": 1
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "private": true
